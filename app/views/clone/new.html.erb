<section class="search">
  <div class="grid-container">
    <div class="grid-x grid-margin-x search">
      <form class="custom">
        <div class="grid-x grid-margin-x">
          <div class="small-6 cell">
            <label>
              Select company
            </label>
            <select id='company_select' class='dropdown selector'>
              <%= options_for_select companies %>
            </select>
          </div>
          <div class="small-2 cell">
            <p><p>
            <div class="loader"></div>
          </div>
        </div>
        <div class="grid-x">
          <div class="small-8 cell">
            <label class='duplicate'>
              Select property
            </label>
            <select id='source_property_select' class='duplicate dropdown selector'>
              <option value=""></option>
            </select>
          </div>
        </div>
        <div class="grid-x">
          <div class="small-4 cell">
            <div id='start_clone' class='duplicate button' src='/clone'>Attach</div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<section class='results' style="display: none">
  <div class='grid-container'>
    <div class="grid-x grid-margin-x">
      <div class='cell'>
        <ul class='accordion' data-accordion data-multi-expand='true' id='clone_events'>
          <%= render partial: 'shared/event', formats: [:html], locals: default_component %>
        </ul>
      </div>
    </div>
  </div>
</section>

<%= javascript_include_tag 'clone.js' %>
